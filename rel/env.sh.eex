# Read the "erl" fw_cfg entry
FW_CFG_PATH="/sys/firmware/qemu_fw_cfg/by_name/erl/raw"

if [ -f "$FW_CFG_PATH" ]; then
    # Read the arguments passed from host
    ERL_ARGS=$(cat "$FW_CFG_PATH")
    echo "Arguments from host: $ERL_ARGS"

    export RELEASE_VM_ARGS="${RELEASE_ROOT}/releases/${RELEASE_VSN}/peer.vm.args"

else
    echo "No fw_cfg erl entry found"
    exit 1
fi
